{ 
  "compilerOptions": {
    "outDir": "dist",                       
    "rootDirs": ["./server"],                 
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES6",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./server",
    "noImplicitAny": true,
  },
  "include": ["server/**/*.ts"],
  "exclude": ["**/node_modules", "dist"]          
}